<!DOCTYPE html>
<html lang="en">
<% include partials/header.ejs %>
<body id="page-top" class="inner_page">
<!-- Navigation-->
<% include partials/searchableNav.ejs %>
<!-- Masthead-->

<header class="inner_banner">
    <div class="container px-4 px-lg-5 d-flex align-items-center justify-content-center">
        <div class="d-flex justify-content-center">
            <div class="text-center">
                <h2 class="mx-auto my-0 text-uppercase text-white">My Workouts </h2>
            </div>
        </div>
    </div>
</header>


<section class="section_padding bg-light" id="talk_to_us">
    <div class="container list_container">

        <div class="card">
            <div class="card-header text_right bg-dark">
                <h6 class="text-white">My Workouts
                    <span><a href="/workouts" class="btn btn-danger btn-sm float-end text-white"
                             style="text-align: right !important"> <i class="fas fa-plus"></i> Add New</a></span>
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="" class="table table-striped table-sm ">
                        <thead>
                        <tr>
                            <th> Date</th>
                            <th> No. of sets</th>
                            <th> Exercise Type</th>
                            <th> No. of Reps</th>
                            <th> Rest Intervals</th>
                            <th class="no-sort">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% workouts.forEach(workout => { %>
                            <tr>
                                <td><%= workout.createdAt %></td>
                                <td><%= workout.no_of_sets %></td>
                                <td><%= workout.exercise_type %></td>
                                <td><%= workout.no_of_reps %></td>
                                <td><%= workout.rest_interval %></td>
                                <td>
                                    <a href="/update-metrics/<%= workout._id %>">Update Metrics</a>
                                    <a href="/edit-workout/<%= workout._id %>">Edit</a>
                                    <form action="/delete-workout/<%= workout._id %>" method="post"
                                          style="display:inline;">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>

                        </tbody>
                    </table>
                </div>

            </div>

        </div>


    </div>
</section>

<!-- Footer-->
<% include partials/footer.ejs %>

<!--Search Modal-->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Search Fitness Fusion</h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Search Form -->
                <form>
                    <div class="mb-3">
                        <label for="searchInput" class="form-label">Enter Your Fitness Goal</label>
                        <input type="text" class="form-control" id="searchInput"
                               placeholder="Eg. Biceps">
                    </div>
                    <!-- Add any additional form fields as needed -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Get Exercise Recommendation</button>
            </div>
        </div>
    </div>
</div>


</body>
</html>
